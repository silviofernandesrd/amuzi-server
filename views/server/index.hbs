<html>
   <head>
      <title>Amuzi - Servidor</title>
      <link rel="stylesheet" href="scripts/bootstrap.min.css"/>
   </head>
   <style>
      body {
         background: #eee;
         padding: 5% 0;
      }
   </style>
   <body>
      <div id="createTalk" class="container text-center">
         <div class="row">
            <div class="col-md-4 col-md-offset-4">
               <h2>Amuzi - Servidor</h2>
               <label for="talkCodeInput" class="sr-only">Digite um código para a palestra</label>
               <input type="talkCode" id="talkCodeInput"
                  class="form-control formgroup"
                  placeholder="Digite um código para a palestra" required="" autofocus="" />
               <button id="createBtn" class="btn btn-lg btn-primary btnblock">
                  Criar palestra
                </button>
            </div>
         </div>
      </div>
      <div id="talkPage" class="talk-page">
         <div class="row">
            <div class="col-md-12 text-center">
               <audio id="localAudio" controls autoplay></audio>
            </div>
         </div>
         <div class="row text-center">
            <div class="col-md-12">
               <button id="closeTalkBtn" class="btn-danger btn">Finalizar Palestra</button>
            </div>
         </div>
      </div>
      <script src="scripts/server.js"></script>
   </body>
</html>
